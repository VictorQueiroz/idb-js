{
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "autobind-decorator": "^2.4.0",
    "eslint": "^8.38.0",
    "package-utilities": "^0.0.6",
    "playwright": "^1.57.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "main": "./src/index.js",
  "scripts": {
    "build:es": "npx tsc --project src --module esnext --moduleResolution classic --outDir es",
    "build": "npx tsc -b src --force",
    "prepublishOnly": "npm run build && npm run set-es-paths && npm run test",
    "set-es-paths": "npm run build:es && npx package-utilities --set-es-paths --include \"src/**/*.js\" --es-folder es",
    "test": "npx vitest --run --coverage"
  },
  "name": "idb-javascript",
  "license": "MIT",
  "version": "0.2.0",
  "files": [
    "{es,src}/**/*.{js,map,d.ts}"
  ],
  "keywords": [
    "indexeddb",
    "indexed-db",
    "database",
    "data",
    "web",
    "data-persistence"
  ],
  "browser": {
    "./src/types.js": "./es/src/types.js",
    "./src/index.js": "./es/src/index.js",
    "./src/idbRequestToPromise.js": "./es/src/idbRequestToPromise.js",
    "./src/Transaction.js": "./es/src/Transaction.js",
    "./src/ObjectStoreIndex.js": "./es/src/ObjectStoreIndex.js",
    "./src/ObjectStore.js": "./es/src/ObjectStore.js",
    "./src/DeferredTransaction.js": "./es/src/DeferredTransaction.js",
    "./src/DatabaseThreadDummy.js": "./es/src/DatabaseThreadDummy.js",
    "./src/DatabaseThread.js": "./es/src/DatabaseThread.js",
    "./src/Database.js": "./es/src/Database.js",
    "./src/Cursor.js": "./es/src/Cursor.js"
  }
}
